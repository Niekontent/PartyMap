<div class="card mb-3" style="max-width: 540px;">
  <div class="row no-gutters">
    <div class="col-md-4">
      <% if @user.avatar.attached? %>
        <img src="<%= (url_for(@user.avatar)) %>" class="card-img">
      <% else %>
        <img src="<%= asset_path('empty-profile-picture.jpg') %>" class="card-img">
      <% end %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">Cześć, jestem <%= @user.name %>! </h5>
        <p class="card-text"><%= @user.description %></p>
      </div>
    </div>
  </div>
</div>