<!DOCTYPE html>
<html>
  <head>
    <title>PartyMap</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="#">PartyMap</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Link</a>
        </li>
        <li class="nav-item">
          <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
        </li>
      </ul>
        <% if user_signed_in? %>
          <a class="nav-link" href="<%= destroy_user_session_path %>" data-method="delete">Logout <span class="sr-only">(current)</span></a>
        <% else %>
        <a class="nav-link" href="<%= new_user_session_path %>">Login</a>
        <a class="btn btn-outline-success my-2 my-sm-0" href="<%= new_user_registration_path %>">Register</a>
        <% end %>
    </div>
  </nav>

  <%= yield %>
  </body>
</html>
